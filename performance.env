# Performance Optimization Configuration
# Add these to your .env file to speed up the agent

# === CRITICAL PERFORMANCE SETTINGS ===

# Skip planner for faster responses (planner adds extra LLM call)
SKIP_PLANNER=1

# Skip reviewer for faster responses (reviewer adds extra LLM call + potential retry loop)
SKIP_REVIEWER=1

# Skip reflection for faster responses (reflection adds extra LLM call)
SKIP_REFLECTION=1

# Reduce memory retrieval results (fewer embeddings to search)
MEMORY_RETRIEVAL_LIMIT=1

# Reduce knowledge retrieval results (fewer embeddings to search)
KNOWLEDGE_RETRIEVAL_LIMIT=1

# Use faster models by default
DEFAULT_MODEL_PREFERENCE=fast

# Reduce max tokens for faster generation
FAST_TOKENS=384
SMART_TOKENS=1024

# Reduce message history context (fewer tokens to process)
MAX_HISTORY_MESSAGES=3

# Skip episodic memory save for faster responses (can enable later)
SKIP_MEMORY_SAVE=0

# === MODEL OPTIMIZATIONS ===

# Use temperature=0 for deterministic, faster responses
LLM_TEMPERATURE=0

# Reduce retries for faster failure
MAX_LLM_RETRIES=1

# === CACHING ===

# Enable response caching (instant replies for repeat questions)
CACHE_ENABLED=1
CACHE_TTL_SECONDS=1800
CACHE_MAX_ENTRIES=512

# === OPTIONAL: DISABLE FEATURES FOR SPEED ===

# Disable web search (can be slow)
# ENABLE_WEB_SEARCH=0

# Disable image generation (can be slow)
# ENABLE_IMAGE_GENERATION=0

# Disable MCP tools (can be slow)
# ENABLE_MCP_TOOLS=0
